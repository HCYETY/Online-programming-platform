{
  "compilerOptions": {
    "outDir": "../dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "experimentalDecorators": true,
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "img/*": ["./img/*"],

      // "server/*": ["./server*"],
      // "config/*": ["./server/config"],
      // "controller/*": ["./server/controller"],
      // "lib/*": ["./server/lib"],
      // "model/*": ["./server/model"],
      // "routers/*": ["./server/routers"],
      // "service/*": ["./server/service"],

      "src/*": ["./src/*"],
      "api/*": ["./src/api/*"],
      "pages/*": ["./src/pages/*"],
    }
  },
  "include": [
    "./src/*",
    "./images.d.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}