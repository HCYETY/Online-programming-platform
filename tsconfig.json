{
  "compilerOptions": {
    "outDir": "../dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "experimentalDecorators": true,
    "jsx": "react",
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "img/*": ["./img/*"],
      "src/*": ["./src/*"],
      "api/*": ["./src/api/*"],
      "pages/*": ["./src/pages/*"],
      "common/*": ["./src/common/*"],
      "useRedux/*": ["./src/useRedux/*"],
      "style/*": ["./src/style/*"],
    }
  },
  "include": [
    "./src/*",
    "./images.d.ts",
    "./src/Sendmail.js"
  ],
  "exclude": [
    "./node_modules"
  ]
}