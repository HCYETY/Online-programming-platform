{
  "compilerOptions": {
    "outDir": "../dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"],
      "img/*": ["./img/*"],
      "pages/*": ["./src/pages/*"],
      "api/*": ["./src/api/*"],
    }
  },
  "include": [
    "./src/*",
    "./images.d.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}